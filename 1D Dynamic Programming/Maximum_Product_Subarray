class Solution:
	def maxProduct(self, nums):
		negVal = nums[0]
		currentProd, maxProd = nums[0], nums[0]
		for i in range(1,len(nums)):
			if nums[i] == 0:
				currentProd = 0
				negVal = 0
			elif nums[i] < 0:
				negVal = max(negVal * nums[i], nums[i])
				maxProd = max(maxProd,currentProd, negVal)
				currentProd = 0
			else:
				currentProd = max(currentProd * nums[i], nums[i])
				negVal *= nums[i]
				maxProd = max(maxProd,currentProd)
		print(max(maxProd,currentProd))
		return max(maxProd,currentProd,negVal)

object = Solution()
object.maxProduct([7,-2,-4])



